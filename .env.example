# Copy this file to `.env` and adjust values as needed.

# Timezone for container
TZ=America/Los_Angeles

# Game server config (env-driven)
SERVER_NAME=Stationeers Server
SAVE_NAME=savegamename
WORLD_TYPE=Lunar
DIFFICULTY=Normal
SERVER_VISIBLE=true
START_LOCAL_HOST=true
UPNP_ENABLED=true
SERVER_MAX_PLAYERS=5
AUTO_SAVE=true
SAVE_INTERVAL=300
LOCAL_IP_ADDRESS=0.0.0.0

# Network
GAME_PORT=27016

# Auth and access (optional)
# Leave blank to disable password/secret.
SERVER_PASSWORD=
SERVER_AUTH_SECRET=

# Logging: set to false to log to file /stationeers/gameData/log.txt
LOG_TO_STDOUT=true