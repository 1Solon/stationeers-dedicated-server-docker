# Timezone
TZ=America/Los_Angeles

# Port exposed on the host (both TCP and UDP)
GAME_PORT=27016

# Server settings
SERVER_NAME=My Stationeers Server
SAVE_NAME=savegamename
WORLD_TYPE=Lunar
DIFFICULTY=Normal
SERVER_VISIBLE=true
START_LOCAL_HOST=true
UPNP_ENABLED=true
SERVER_MAX_PLAYERS=5
AUTO_SAVE=true
